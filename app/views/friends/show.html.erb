<div class="p-5 mb-4 bg-body-tertiary rounded-3">
  <div class="container-fluid py-5">
    <h1 class="display-5 fw-bold"><%= @friend.first_name %> <%= @friend.last_name %></h1>
    <h6 class="card-subtitle mb-2 text-body-secondary">
      <%= @friend.email %>
    </h6>
     <a href="tel:<%= @friend.phone %>" class="card-link">
      <%= @friend.phone %>
    </a>
    <a href="https://twitter.com/<%= @friend.twitter %>" target="_blank" class="card-link">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-twitter-x" viewBox="0 0 16 16">
        <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865l8.875 11.633Z"/>
      </svg>
    </a>
    <div class="d-flex flex-row justify-content-between mt-5">
      <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-primary" %>
      <%= button_to "Delete", @friend, method: :delete, class:"btn btn-danger" %>
    </div>
  </div>
</div>
<%= link_to "Back", friends_path, class:"mt-5 btn btn-secondary" %>
